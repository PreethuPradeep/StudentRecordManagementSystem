@model StudentRecordASP.NetMVC.ViewModel.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0">Create New User</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="CreateUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="alert alert-info mb-4">
                        <strong><i class="bi bi-info-circle"></i> Default Passwords:</strong><br />
                        <small>Invigilator: <code>1234</code> | Others: <code>password123</code></small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                        <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RoleName" class="form-label fw-semibold">Role</label>
                        <select asp-for="RoleName" class="form-select form-select-lg" id="roleSelect">
                            <option value="">-- Select Role --</option>
                            @foreach (var role in ViewBag.Roles as IEnumerable<StudentRecordASP.NetMVC.Models.Role>)
                            {
                                <option value="@role.RoleName">@role.RoleName</option>
                            }
                        </select>
                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                    </div>

                    <div class="mb-4" id="studentInput" style="display: none;">
                        <label asp-for="RollNumber" class="form-label fw-semibold">Student Roll Number</label>
                        <input asp-for="RollNumber" class="form-control form-control-lg" type="number" placeholder="Enter student roll number" />
                        <span asp-validation-for="RollNumber" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Create User</button>
                        <a asp-action="Dashboard" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#roleSelect').on('change', function() {
                var selectedRole = $(this).val();
                if (selectedRole === 'Student') {
                    $('#studentInput').show();
                    $('#RollNumber').prop('required', true);
                } else {
                    $('#studentInput').hide();
                    $('#RollNumber').prop('required', false);
                    $('#RollNumber').val('');
                }
            });
        });
    </script>
}
