@model StudentRecordASP.NetMVC.ViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    var isDefaultPassword = Context.Session.GetString("IsDefaultPassword") == "True";
    var userRole = Context.Session.GetString("UserRole");
    var returnUrl = isDefaultPassword ? "#" : $"/{userRole}/Dashboard";
}

<div class="row justify-content-center align-items-center" style="min-height: calc(100vh - 200px);">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header @(isDefaultPassword ? "bg-warning text-dark" : "bg-primary text-white") text-center py-3">
                <h4 class="mb-0">Change Your Password</h4>
                @if (isDefaultPassword)
                {
                    <p class="mb-0 mt-2 small">You must change your default password to continue</p>
                }
            </div>
            <div class="card-body p-4">
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label fw-semibold">Current Password</label>
                        <input asp-for="OldPassword" class="form-control form-control-lg" type="password" placeholder="Enter current password" />
                        <span asp-validation-for="OldPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label fw-semibold">New Password</label>
                        <input asp-for="NewPassword" class="form-control form-control-lg" type="password" placeholder="Enter new password" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm New Password</label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Change Password</button>
                        @if (!isDefaultPassword)
                        {
                            <a href="@returnUrl" class="btn btn-outline-secondary">Cancel</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
